<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/size_10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        app:srcCompat="@drawable/ic_baseline_account_circle_24"
        android:id="@+id/img_team_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_centerVertical="true"/>
    <LinearLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_toLeftOf="@id/contactWrapper"
        android:layout_toStartOf="@id/contactWrapper"
        android:layout_toEndOf="@id/img_team_avatar"
        android:layout_toRightOf="@id/img_team_avatar"
        android:orientation="vertical">
        <RelativeLayout
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_team_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="8dp"
                android:textStyle="bold"
                android:textColor="@color/grey_dark"
                android:text="John Doe"/>
            <ImageView
                android:id="@+id/img_circle"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/tv_team_name"
                android:layout_toRightOf="@id/tv_team_name"
                android:src="@drawable/circle_black"/>
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_team_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/img_circle"
                android:layout_toRightOf="@id/img_circle"
                android:textColor="@color/grey_dark"
                android:layout_margin="8dp"
                android:text="John Doe"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_team_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textColor="@color/grey_dark"
            android:text="John Doe"/>
        <TextView
            android:id="@+id/tv_team_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey_dark"
            android:layout_margin="8dp"
            android:text="email@email.com"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/contactWrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true">
        <ImageView
            android:id="@+id/telvon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:tint="@android:color/black"
            app:srcCompat="@drawable/ic_baseline_phone_24"/>
        <ImageView
            android:id="@+id/wa"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/wa_logo2"/>
    </LinearLayout>

    <View
        android:background="@color/green_soft"
        android:layout_below="@id/parent"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"/>
</RelativeLayout>