<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg_1">




    <LinearLayout
        android:layout_marginTop="@dimen/size_50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/caturindo_logo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="PT. Caturindo"
                android:textSize="24dp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textAlignment="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/box_rounded_corner"
            android:padding="10dp">

            <!-- Username Label -->
            <EditText
                android:id="@+id/etLoginEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Username"
                android:inputType="textEmailAddress"
                android:background="@null"
                android:layout_margin="10dp"
                android:textColor="@color/grey_hard"
                android:textColorHint="@color/grey_hard"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@color/grey_hard"/>

            <!-- Password Label -->
            <EditText
                android:id="@+id/etLoginPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                android:background="@null"
                android:layout_margin="10dp"
                android:textColor="@color/grey_hard"
                android:textColorHint="@color/grey_hard"/>

        </LinearLayout>
        <TextView
            android:id="@+id/tv_reset_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10dp"
            android:text="@string/lupa_password"
            android:textSize="@dimen/size_16sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:gravity="right"
            />
        <RelativeLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">

            <Button
                android:gravity="center"
                android:id="@+id/btnLogin"
                android:layout_width="120dp"
                android:layout_height="48dp"
                android:layout_centerHorizontal="true"
                android:text="Login"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:textAllCaps="true"
                android:textSize="18dp"
                android:textColor="@android:color/white"
                android:background="@drawable/button_gradient_rounded"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_hard"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tidak_memmpunyai_akun"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:layout_marginTop="20dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <Button
                android:gravity="center"
                android:id="@+id/btnRegisterLogin"
                android:layout_width="120dp"
                android:layout_height="48dp"
                android:layout_centerHorizontal="true"
                android:text="Register"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:textAllCaps="true"
                android:textSize="18dp"
                android:textColor="@android:color/white"
                android:background="@drawable/button_gradient_rounded"/>

        </RelativeLayout>

    </LinearLayout>
    <ProgressBar
        android:layout_centerInParent="true"
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:progress="25"
        android:indeterminateTint="@color/colorAccent"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"/>
</RelativeLayout>
</androidx.core.widget.NestedScrollView>