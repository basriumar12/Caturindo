<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".activities.TeamActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@drawable/background_gradient_dark">
        <ImageView
            android:id="@+id/img_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            app:tint="@android:color/white"
            app:srcCompat="@drawable/ic_baseline_view_module_24"/>
        <ImageView
            android:id="@+id/img_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            app:tint="@android:color/white"
            app:srcCompat="@drawable/ic_baseline_more_vert_24"/>
        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/img_menu"
            android:src="@drawable/caturindo_32"/>
        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="John Doe"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="24sp"/>
        <TextView
            android:id="@+id/tv_usertag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_username"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="\@johndoe"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_gradient_grey">
        <TextView
            android:id="@+id/tv_user_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="Jabatan"
            android:textColor="@color/grey_dark"
            android:textSize="14sp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tv_user_level">
            <TextView
                android:id="@+id/tv_user_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/tv_dot"
                android:layout_toLeftOf="@id/tv_dot"
                android:layout_marginTop="8dp"
                android:layout_centerVertical="true"
                android:lines="1"
                android:text="Email@email.com"
                android:textColor="@color/grey_dark"
                android:textSize="14sp"/>
            <ImageView
                android:id="@+id/tv_dot"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_marginHorizontal="8dp"
                android:layout_centerInParent="true"
                android:src="@drawable/circle_black"
                android:textColor="@color/grey_dark"
                android:textSize="24sp"/>
            <TextView
                android:id="@+id/tv_user_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/tv_dot"
                android:layout_toRightOf="@id/tv_dot"
                android:layout_marginTop="8dp"
                android:layout_centerVertical="true"
                android:text="0811111111111"
                android:textColor="@color/grey_dark"
                android:textSize="14sp"/>
        </RelativeLayout>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_team"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp" />
</LinearLayout>