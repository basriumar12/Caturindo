<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_marginTop="@dimen/size_10dp"
        android:layout_marginStart="@dimen/size_10dp"
        android:layout_toLeftOf="@id/tv_date_booking_change"
        android:label="Label Date"
        android:id="@+id/tv_date_booking"
        android:textSize="@dimen/size_14sp"
        android:textColor="@color/grey_dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView

        android:layout_margin="@dimen/size_10dp"
        android:layout_alignParentRight="true"
        android:text="@string/ganti"
        android:id="@+id/tv_date_booking_change"
        android:textSize="@dimen/size_16sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@id/tv_date_booking_change"
        android:id="@+id/rvTransportAvailable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/paren_data_empty"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/ic_icon_task_history"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <TextView
            android:textSize="16sp"
            android:textColor="@color/grey_gradient_hard"
            android:gravity="center"
            android:text="@string/label_data_kosong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </androidx.appcompat.widget.LinearLayoutCompat>
    <ProgressBar
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:id="@+id/progress_circular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>
