<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">


    <include
        android:id="@+id/toolbar"
        layout="@layout/custom_toolbar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:background="@android:color/white"
        android:orientation="vertical"
        tools:context=".activities.meeting.create.CreateMeetingActivity">
        <!-- search bar layout -->


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/et_id_meeting_parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:background="@drawable/rounded_edit_test"
                    android:elevation="5dp"
                    android:hint="Id meeting"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="8dp"
                    android:textColor="@color/grey_dark"
                    android:textColorHint="@color/grey_hard"
                    android:textSize="14sp"
                    android:visibility="gone"
                    tools:ignore="UnusedAttribute" />

                <EditText
                    android:id="@+id/et_meeting_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/rounded_edit_test"
                    android:elevation="5dp"
                    android:hint="Meeting Title"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="8dp"
                    android:textColor="@color/grey_dark"
                    android:textColorHint="@color/grey_hard"
                    android:textSize="14sp"
                    tools:ignore="UnusedAttribute" />

                <EditText
                    android:id="@+id/et_meeting_desctiption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/rounded_edit_test"
                    android:elevation="5dp"
                    android:gravity="top"
                    android:hint="Description"
                    android:lines="5"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="8dp"
                    android:textColor="@color/grey_dark"
                    android:textColorHint="@color/grey_hard"
                    android:textSize="14sp"
                    tools:ignore="UnusedAttribute" />

                <TextView
                    android:id="@+id/et_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/rounded_edit_test"
                    android:elevation="5dp"
                    android:hint="Date"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="8dp"
                    android:textColor="@color/grey_dark"
                    android:textColorHint="@color/grey_hard"
                    android:textSize="14sp"
                    tools:ignore="UnusedAttribute" />

                <TextView
                    android:id="@+id/et_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/rounded_edit_test"
                    android:elevation="5dp"
                    android:hint="Time"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="8dp"
                    android:textColor="@color/grey_dark"
                    android:textColorHint="@color/grey_hard"
                    android:textSize="14sp"
                    tools:ignore="UnusedAttribute" />

                <TextView
                    android:id="@+id/et_tag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/rounded_edit_test"
                    android:elevation="5dp"
                    android:hint="Tag your team"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="8dp"
                    android:textColor="@color/grey_dark"
                    android:textColorHint="@color/grey_hard"
                    android:textSize="14sp"
                    android:visibility="gone"
                    tools:ignore="UnusedAttribute" />

                <TextView
                    android:id="@+id/et_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/rounded_edit_test"
                    android:elevation="5dp"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="8dp"
                    android:text="Location"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    tools:ignore="UnusedAttribute" />

                <TextView
                    android:id="@+id/et_grup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/rounded_edit_test"
                    android:elevation="5dp"
                    android:hint="Pilih Grup"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="8dp"
                    android:textColor="@color/grey_dark"
                    android:textColorHint="@color/grey_hard"
                    android:textSize="14sp"
                    android:visibility="visible"
                    tools:ignore="UnusedAttribute" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_attachment_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="2dp"
                        android:background="@drawable/rounded_edit_test"
                        android:elevation="5dp"
                        android:hint="Add Attachment"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="8dp"
                        android:textColor="@color/grey_dark"
                        android:textColorHint="@color/grey_hard"
                        android:textStyle="bold"
                        tools:ignore="UnusedAttribute" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_below="@id/tv_attachment_label"
                        android:layout_marginHorizontal="16dp" />

                    <ImageView
                        android:id="@+id/img_upload"
                        android:layout_width="@dimen/size_75dp"
                        android:layout_height="@dimen/size_75dp"
                        android:layout_below="@id/tv_attachment_label"
                        android:layout_centerInParent="true"
                        android:layout_margin="@dimen/size_10dp"
                        android:layout_marginLeft="@dimen/size_10dp"
                        android:visibility="gone" />

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_save"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:background="@drawable/rounded_button_gradient"
                        android:text="Save"
                        android:textColor="@color/grey_dark" />


                    <Button
                        android:id="@+id/btn_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_button_gradient"
                        android:text="Cancel"
                        android:textColor="@color/grey_dark" />
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>


    <ProgressBar
        android:id="@+id/progress_circular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />
</RelativeLayout>