<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".activities.meeting.create.CreateMeetingActivity">
    <!-- search bar layout -->
    <include
        android:id="@+id/toolbar"
        layout="@layout/custom_toolbar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp">
        <EditText
            android:id="@+id/et_meeting_title"
            android:hint="Meeting Title"
            android:paddingVertical="8dp"
            android:layout_marginHorizontal="16dp"
            android:paddingHorizontal="8dp"
            android:elevation="5dp"
            android:textSize="14sp"
            android:textColor="@color/grey_dark"
            android:textColorHint="@color/grey_hard"
            android:background="@drawable/rounded_edit_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UnusedAttribute" />

        <EditText
            android:id="@+id/et_meeting_desctiption"
            android:hint="Description"
            android:paddingVertical="8dp"
            android:layout_marginHorizontal="16dp"
            android:paddingHorizontal="8dp"
            android:layout_marginTop="8dp"
            android:lines="5"
            android:textColor="@color/grey_dark"
            android:textColorHint="@color/grey_hard"
            android:gravity="top"
            android:elevation="5dp"
            android:textSize="14sp"
            android:background="@drawable/rounded_edit_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UnusedAttribute" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_attachment_label"
                android:hint="Add Attachment"
                android:paddingVertical="8dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="2dp"
                android:paddingHorizontal="8dp"
                android:elevation="5dp"
                android:layout_marginTop="8dp"
                android:textColorHint="@color/grey_hard"
                android:textStyle="bold"
                android:textColor="@color/grey_dark"
                android:background="@drawable/rounded_edit_test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="UnusedAttribute" />

        </RelativeLayout>
        <EditText
            android:id="@+id/et_date"
            android:hint="Date"
            android:textSize="14sp"
            android:paddingVertical="8dp"
            android:layout_marginHorizontal="16dp"
            android:paddingHorizontal="8dp"
            android:textColor="@color/grey_dark"
            android:textColorHint="@color/grey_hard"
            android:elevation="5dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_edit_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UnusedAttribute" />
        <EditText
            android:id="@+id/et_time"
            android:hint="Time"
            android:paddingVertical="8dp"
            android:layout_marginHorizontal="16dp"
            android:paddingHorizontal="8dp"
            android:elevation="5dp"
            android:textSize="14sp"
            android:textColor="@color/grey_dark"
            android:textColorHint="@color/grey_hard"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_edit_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UnusedAttribute" />
        <EditText
            android:id="@+id/et_tag"
            android:hint="Tag your team"
            android:paddingVertical="8dp"
            android:layout_marginHorizontal="16dp"
            android:paddingHorizontal="8dp"
            android:elevation="5dp"
            android:textSize="14sp"
            android:textColor="@color/grey_dark"
            android:textColorHint="@color/grey_hard"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_edit_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UnusedAttribute" />

        <TextView
            android:id="@+id/et_location"
            android:text="Location"
            android:paddingVertical="8dp"
            android:layout_marginHorizontal="16dp"
            android:paddingHorizontal="8dp"
            android:elevation="5dp"
            android:textSize="14sp"
            android:textColor="@color/grey_hard"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_edit_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UnusedAttribute" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/rounded_button_gradient"
                android:textColor="@color/grey_dark"
                android:text="Save"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button_gradient"
                android:text="Cancel"
                android:textColor="@color/grey_dark"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>